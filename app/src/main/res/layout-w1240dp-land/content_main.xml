<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/app_bar_main">

    <!-- Contenedor principal para las 3 zonas, apiladas horizontalmente -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:paddingHorizontal="@dimen/fragment_horizontal_margin">

        <!-- Zona Izquierda (Galería vertical) -->
        <LinearLayout
            android:id="@+id/zone_top"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center_horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Patrones nuevos"
                android:textAppearance="@style/TextAppearance.AppCompat.Title"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="4dp"/>

            <ImageSwitcher
                android:id="@+id/image_switcher_land"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1" />

            <ImageButton
                android:id="@+id/button_down"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:src="@drawable/ic_arrow_down" />

        </LinearLayout>

        <!-- Zona Central: Segunda galería vertical -->
        <LinearLayout
            android:id="@+id/zone_middle"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center_horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Puntos Nuevos"
                android:textAppearance="@style/TextAppearance.AppCompat.Title"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="4dp"/>

            <ImageSwitcher
                android:id="@+id/image_switcher_middle"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1" />

            <ImageButton
                android:id="@+id/button_down_middle"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:src="@drawable/ic_arrow_down" />

        </LinearLayout>

        <!-- Zona Derecha: Tercera galería vertical -->
        <LinearLayout
            android:id="@+id/zone_bottom"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center_horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Noticias"
                android:textAppearance="@style/TextAppearance.AppCompat.Title"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="4dp"/>

            <ImageSwitcher
                android:id="@+id/image_switcher_bottom_land"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1" />

            <ImageButton
                android:id="@+id/button_down_bottom"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:src="@drawable/ic_arrow_down" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>